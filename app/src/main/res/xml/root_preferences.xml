<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/theme_header">

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="@string/darkTheme_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/saveState_header">

        <SwitchPreferenceCompat
            app:key="saveState"
            app:summaryOff="@string/save_summary_off"
            app:summaryOn="@string/save_summary_on"
            app:title="@string/save_title" />

    </PreferenceCategory>

</PreferenceScreen>
